        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio Venta</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Cantidad</th>
        </tr>
        </thead>
        <tbody>
        {% for item in datos %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.nombre }}</td>
            <td>{{ item.venta }}</td>
            <td>{{ item.descripcion }}</td>
            <td>{{ item.cantidad }}</td>
