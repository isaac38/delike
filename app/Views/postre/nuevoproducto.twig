{% extends "partial/layout.twig" %}

{% block content %}

    <form id="frmNuevoProducto" method="post" action="{{ "postre/nuevoproducto" |url }}" enctype="multipart/form-data">
        <div class="col-md-6 offset-md-3">
            <div class="form-group">
                <label for="nombreproducto">Nombre de Pastel</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre completo">
            </div>

            <div class="form-group">
                <label for="id_tipo">Categoria</label>
                <select class="custom-select" id="id_tipo" name="id_tipo" required>
                    <option value="0">Selecciona una categoria</option>
                    {%  for item in categoria %}
                        <option value={{ item.id }}>{{ item.tipo }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="descripcion">Descripci√≥n</label>
                <textarea class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion del postre" required></textarea>

            </div>
            <div class="form-group">
                <label for="venta">Nombre de Pastel</label>
                <input type="number" class="form-control" id="venta" name="venta" placeholder="Precio Venta">
            </div>

            <div class="form-group">
                <label for="cantidad">Nombre de Pastel</label>
                <input type="number" class="form-control" id="cantidad" name="cantidad" placeholder="Existencia">
            </div>

            <div class="form-group">
                <input type="file" class="form-control" id="imagen" name="imagen" required>
            </div>


            <button type="submit" class="btn btn-primary">Agregar</button>
            <button type="submit" class="btn btn-light"><a href="{{ "postre/index" |url }}" style="font-size: 15px ">Cancelar</a></button>

        </div>
    </form>

{% endblock %}