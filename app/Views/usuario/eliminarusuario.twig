{% extends "partial/layout.twig" %}

{% block content %}
    <div class="container d-flex justify-content-center">
        <div class="col-md-4">
            <div class="text-center">
                <form id="frmNuevoUsuario" class="formulario" method="post" action="{{ "usuario/eliminarusuario" |url }}">
                    <div class="form-group">
                        <label for="nomusuario">Nombre completo</label>
                        <input type="text" class="form-control" id="nomusuario" name="nomusuario" placeholder="Nombre completo" disabled value="{{ usuario.nomusuario }}">
                    </div>

                    <input type="hidden" name="id" value="{{ usuario.id }}">

                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" disabled value="{{ usuario.email }}">
                        <!--small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small-->
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="text" class="form-control" id="pwd" name="user_psw" placeholder="Password" disabled value="{{ usuario.user_psw }}">
                    </div>
                    <button type="submit" class="btn btn-primary">elimiar</button>
                    <button type="submit" class="btn btn-light"><a href="{{ "usuario/index" |url }}" style="font-size: 15px ">Cancelar</a></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}